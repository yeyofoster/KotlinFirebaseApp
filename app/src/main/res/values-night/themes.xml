<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinFirebaseApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_soft_blue</item>
        <item name="colorPrimaryDark">@color/navy_blue</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/soft_blue</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>